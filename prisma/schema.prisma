
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// User table for authorization
model User {
  id               String         @id @default(uuid())
  email            String         @unique
  password         String
  name             String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([email])
}